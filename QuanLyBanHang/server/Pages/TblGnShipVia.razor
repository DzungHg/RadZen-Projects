@page "/tbl-gn-ship-via"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblGnShipViaComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" @ref:suppressField Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" @ref:suppressField Size="H1" Text="Tbl Gn Ship Via">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" @ref:suppressField Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" @ref:suppressField AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnShipViaResult)" TItem="TblGnShipVium" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblGnShipVium" Context="tblGnShipVium" Property="ShipVia_SEQ" Title="Ship Via SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnShipVium" Context="tblGnShipVium" Property="ShipVia_ID" Title="Ship Via ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnShipVium" Context="tblGnShipVium" Property="Description" Title="Description" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnShipVium" Context="tblGnShipVium" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblGnShipVium">
                <RadzenButton @ref="gridDeleteButton" @ref:suppressField ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, tblGnShipVium))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
