@page "/"
@page "/tbl-gn-address-books"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblGnAddressBooksComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" Size="H1" Text="Tbl Gn Address Books">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnAddressBooksResult)" TItem="TblGnAddressBook" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="AddressBook_SEQ" Title="Address Book SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="AddressBook_ID" Title="Address Book ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="AddressBookType_FK" SortProperty="TblGnAddressBookType.AddressBookType_ID" FilterProperty="TblGnAddressBookType.AddressBookType_ID" Title="Tbl Gn Address Book Type" Type="string">
              <Template Context="data">
              @data.TblGnAddressBookType?.AddressBookType_ID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="LastName" Title="Last Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="FirstName" Title="First Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="Gender_FK" SortProperty="TblGnGender.Gender_ID" FilterProperty="TblGnGender.Gender_ID" Title="Tbl Gn Gender" Type="string">
              <Template Context="data">
              @data.TblGnGender?.Gender_ID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Format="date-time" Property="DOB" FormatString="{0:MM/dd/yyyy}" Title="DOB" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="Origin" Title="Origin" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="IDNumber" Title="ID Number" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="TaxIDNumber" Title="Tax ID Number" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="OrganizationName" Title="Organization Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="JobPosition" Title="Job Position" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="Address" Title="Address" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Property="City_FK" SortProperty="TblGnCity.City_ID" FilterProperty="TblGnCity.City_ID" Title="Tbl Gn City" Type="string">
              <Template Context="data">
              @data.TblGnCity?.City_ID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnAddressBook" Context="tblGnAddressBook" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblGnAddressBook">
                <RadzenButton @ref="gridDeleteButton" ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, tblGnAddressBook))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
