@page "/tbl-gn-genders"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblGnGendersComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" Size="H1" Text="Tbl Gn Genders">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnGendersResult)" TItem="TblGnGender" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblGnGender" Context="tblGnGender" Property="Gender_SEQ" Title="Gender SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnGender" Context="tblGnGender" Property="Gender_ID" Title="Gender ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnGender" Context="tblGnGender" Property="Gender" Title="Gender" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnGender" Context="tblGnGender" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblGnGender">
                <RadzenButton @ref="gridDeleteButton" ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, tblGnGender))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
