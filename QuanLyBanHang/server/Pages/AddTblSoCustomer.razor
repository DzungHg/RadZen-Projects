              <div class="col-md-9">
                <RadzenNumeric @ref="salesPersonYtdGoal" style="width: 100%" Name="SalesPerson_YTD_Goal" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label22" Component="ChargeInterest" style="width: 100%" Text="Tính lãi?">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenCheckBox @ref="chargeInterest" TriState="true" Name="ChargeInterest">
                </RadzenCheckBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label23" Component="Statement" style="width: 100%" Text="Liệt kê công nợ?">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenCheckBox @ref="statement" TriState="true" Name="Statement">
                </RadzenCheckBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label24" Component="Aging30DayAmout" style="width: 100%" Text="Tuổi nợ 30">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="aging30DayAmout" style="width: 100%" Name="Aging30DayAmout" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label25" Component="Aging60DayAmout" style="width: 100%" Text="Tuổi nợ 60">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="aging60DayAmout" style="width: 100%" Name="Aging60DayAmout" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label26" Component="Aging90DayAmout" style="width: 100%" Text="Aging 90 Day Amout">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="aging90DayAmout" style="width: 100%" Name="Aging90DayAmout" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label2" Component="LastUpdatedDate" style="width: 100%" Text="Ngày nhật tu gần nhất">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker @ref="lastUpdatedDate" DateFormat="MM/dd/yyyy" style="width: 100%" Value="DateTime.Now" Name="LastUpdatedDate">
                </RadzenDatePicker>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label28" Component="Notes" style="width: 100%" Text="Ghi chú">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox @ref="notes" style="width: 100%" Name="Notes">
                </RadzenTextBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label29" Component="LastUdpatedBy" style="width: 100%" Text="Người nhật tu gần nhất">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="lastUdpatedBy" style="width: 100%" Name="LastUdpatedBy" TItem="int?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label30" Component="Inactive" style="width: 100%" Text="Không dùng nữa?">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenCheckBox @ref="inactive" TriState="true" Name="Inactive">
                </RadzenCheckBox>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton @ref="button1" ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Lưu">
                </RadzenButton>
                <RadzenButton @ref="button2" ButtonStyle="ButtonStyle.Light" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
