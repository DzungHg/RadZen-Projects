              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="lyrGrossSales" style="width: 100%" Name="LYR_GrossSales" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label16" Component="LYR_COGS" style="width: 100%" Text="Giá phí bán hàng LYR">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="lyrCogs" style="width: 100%" Name="LYR_COGS" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label17" Component="LastAmountSales" style="width: 100%" Text="Doanh thu lần chót">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="lastAmountSales" style="width: 100%" Name="LastAmountSales" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label18" Component="CommissionPercent" style="width: 100%" Text="Hoa hồng nhân viên bán hàng">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="commissionPercent" style="width: 100%" Name="CommissionPercent" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label1" Component="CommissionPercent" style="width: 100%" Text="Danh bạ NV bán hàng">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown @ref="dropdown0" Data="@(getTblGnAddressBooksResult)" Placeholder="Choose TblGnAddressBook" style="width: 100%" TextProperty="AddressBook_ID" ValueProperty="AddressBook_SEQ" Name="Dropdown0">
                </RadzenDropDown>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label20" Component="SalesPerson_MTD_Goal" style="width: 100%" Text="MTD Kế hoạch người bán">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric @ref="salesPersonMtdGoal" style="width: 100%" Name="SalesPerson_MTD_Goal" TItem="decimal?">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel @ref="label21" Component="SalesPerson_YTD_Goal" style="width: 100%" Text="YTD Kế hoạch người bán">
