@page "/tbl-so-customers"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblSoCustomersComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" @ref:suppressField Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" @ref:suppressField Size="H1" Text="Tbl So Customers">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" @ref:suppressField Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" @ref:suppressField AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblSoCustomersResult)" TItem="TblSoCustomer" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="Customer_SEQ" Title="Customer SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="Customer_ID" Title="Customer ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="LastName" Title="Last Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="FirstName" Title="First Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="CustomerAdressBook_FK" SortProperty="TblGnAddressBook.AddressBook_ID" FilterProperty="TblGnAddressBook.AddressBook_ID" Title="Tbl Gn Address Book" Type="string">
              <Template Context="data">
              @data.TblGnAddressBook?.AddressBook_ID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="CreditLimit" Title="Credit Limit" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="date-time" Property="LastRevisedCreditLimitDate" FormatString="{0:dd/mm/yy}" Title="Last Revised Credit Limit Date" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="PaymentTerm_FK" SortProperty="TblGnPaymentTerm.PaymentTermText" FilterProperty="TblGnPaymentTerm.PaymentTermText" Title="Tbl Gn Payment Term" Type="string">
              <Template Context="data">
              @data.TblGnPaymentTerm?.PaymentTermText
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="PaymentType_FK" SortProperty="TblGnPaymentType.PaymentTypeText" FilterProperty="TblGnPaymentType.PaymentTypeText" Title="Tbl Gn Payment Type" Type="string">
              <Template Context="data">
              @data.TblGnPaymentType?.PaymentTypeText
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="DiscountPercent" Title="Discount Percent" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="Current_MTD_Sales" Title="Current MTD Sales" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="Current_MTD_Returns" Title="Current MTD Returns" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="YTD_GrossSales" Title="YTD Gross Sales" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="YTD_Returns" Title="YTD Returns" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="YTD_COGS" Title="YTD COGS" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="LYR_GrossSales" Title="LYR Gross Sales" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="LYR_COGS" Title="LYR COGS" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="LastAmountSales" Title="Last Amount Sales" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="SalesPersonAdressBook_FK" Title="Sales Person Adress Book FK" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="CommissionPercent" Title="Commission Percent" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="SalesPerson_MTD_Goal" Title="Sales Person MTD Goal" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="SalesPerson_YTD_Goal" Title="Sales Person YTD Goal" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="ChargeInterest" Title="Charge Interest" Type="boolean">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="Statement" Title="Statement" Type="boolean">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="Aging30DayAmout" Title="Aging 30 Day Amout" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="Aging60DayAmout" Title="Aging 60 Day Amout" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="decimal" Property="Aging90DayAmout" Title="Aging 90 Day Amout" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="Notes" Title="Notes" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Format="date-time" Property="LastUpdatedDate" FormatString="{0:dd/mm/yy}" Title="Last Updated Date" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="LastUdpatedBy" Title="Last Udpated By" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Property="Inactive" Title="Inactive" Type="boolean">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoCustomer" Context="tblSoCustomer" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblSoCustomer">
                <RadzenButton @ref="gridDeleteButton" @ref:suppressField ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, tblSoCustomer))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
