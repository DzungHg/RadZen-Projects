@layout MainLayout
@inherits QuanLyBanHang.Pages.EditTblSoCustomerComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" Container="main">
