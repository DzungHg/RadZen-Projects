@page "/tbl-gn-cities"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblGnCitiesComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" @ref:suppressField Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" @ref:suppressField Size="H1" Text="Tbl Gn Cities">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" @ref:suppressField Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" @ref:suppressField AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnCitiesResult)" TItem="TblGnCity" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblGnCity" Context="tblGnCity" Property="City_SEQ" Title="City SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnCity" Context="tblGnCity" Property="City_ID" Title="City ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnCity" Context="tblGnCity" Property="CityName" Title="City Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnCity" Context="tblGnCity" Property="CityAbbreviation" Title="City Abbreviation" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblGnCity" Context="tblGnCity" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblGnCity">
                <RadzenButton @ref="gridDeleteButton" @ref:suppressField ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, tblGnCity))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
