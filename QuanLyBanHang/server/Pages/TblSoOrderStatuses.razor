@page "/tbl-so-order-statuses"
@layout MainLayout
@inherits QuanLyBanHang.Pages.TblSoOrderStatusesComponent

@using Radzen
@using Radzen.Blazor
@using QuanLyBanHang.Models.OtErp
<RadzenContent @ref="content1" @ref:suppressField Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" @ref:suppressField Size="H1" Text="Tbl So Order Statuses">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton @ref="button0" @ref:suppressField Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" @ref:suppressField AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblSoOrderStatusesResult)" TItem="TblSoOrderStatus" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="TblSoOrderStatus" Context="tblSoOrderStatus" Property="SOStatus_SEQ" Title="SO Status SEQ" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoOrderStatus" Context="tblSoOrderStatus" Property="SOStatus_ID" Title="SO Status ID" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoOrderStatus" Context="tblSoOrderStatus" Property="SOStatusText" Title="SO Status Text" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoOrderStatus" Context="tblSoOrderStatus" Property="Description" Title="Description" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="TblSoOrderStatus" Context="tblSoOrderStatus" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template Context="tblSoOrderStatus">
                <RadzenButton @ref="gridDeleteButton" @ref:suppressField ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, tblSoOrderStatus))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
