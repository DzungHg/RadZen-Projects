{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "components": [
            {
              "class": "col-md-9",
              "components": [
                {
                  "name": "closeLabel",
                  "style": {
                    "fontWeight": "bold"
                  },
                  "text": "Item no longer available.",
                  "type": "label",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col0",
              "type": "col"
            },
            {
              "class": "col-md-3",
              "components": [
                {
                  "buttonStyle": "secondary",
                  "events": {
                    "click": [
                      {
                        "type": "close-popup"
                      }
                    ]
                  },
                  "icon": "",
                  "name": "closeButton",
                  "style": {
                    "marginBottom": "20px"
                  },
                  "text": "Close",
                  "type": "button",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col1",
              "type": "col"
            }
          ],
          "name": "row0",
          "style": {},
          "type": "row"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Payment Term Text",
                              "component": "PaymentTermText",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "PaymentTermText",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              }
                            },
                            {
                              "type": "required-validator",
                              "name": "PaymentTermTextRequiredValidator",
                              "component": "PaymentTermText",
                              "text": "PaymentTermText is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Payment Term Id",
                              "component": "PaymentTerm_ID",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 20,
                              "type": "textbox",
                              "name": "PaymentTerm_ID",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              }
                            },
                            {
                              "type": "required-validator",
                              "name": "PaymentTerm_IDRequiredValidator",
                              "component": "PaymentTerm_ID",
                              "text": "PaymentTerm_ID is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "name": "canEdit",
                            "type": "set",
                            "value": "!(result.status == 400)",
                            "valueType": "bool"
                          },
                          {
                            "detail": "Unable to update TblGnPaymentTerm",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "OT_ERP.updateTblGnPaymentTerm",
                        "parameters": [
                          {
                            "name": "PaymentTerm_SEQ",
                            "value": "${parameters.PaymentTerm_SEQ}"
                          },
                          {
                            "name": "TblGnPaymentTerm",
                            "value": "${tblgnpaymentterm}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${tblgnpaymentterm}"
                          }
                        ],
                        "type": "invoke",
                        "argType": "TblGnPaymentTerm"
                      }
                    ]
                  },
                  "data": "${tblgnpaymentterm}",
                  "visible": "${tblgnpaymentterm != null && canEdit}",
                  "itemType": "TblGnPaymentTerm"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "canEdit",
        "type": "set",
        "value": "true",
        "valueType": "bool"
      },
      {
        "name": "OT_ERP.getTblGnPaymentTermByPaymentTerm_SEQ",
        "parameters": [
          {
            "name": "PaymentTerm_SEQ",
            "value": "${parameters.PaymentTerm_SEQ}"
          }
        ],
        "then": [
          {
            "name": "tblgnpaymentterm",
            "type": "set",
            "value": "${result}",
            "valueType": "TblGnPaymentTerm"
          }
        ],
        "error": [
          {
            "name": "canEdit",
            "type": "set",
            "value": "!(result.status == 400)",
            "valueType": "bool"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Tbl Gn Payment Term",
  "layout": "Main"
}