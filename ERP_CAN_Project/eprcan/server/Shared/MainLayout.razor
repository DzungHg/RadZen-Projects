@inherits ErpCan.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
@using ErpCan.Models.CanErpDbAt132
<RadzenDialog />
<RadzenNotification />

<RadzenHeader @ref="header0">
  <ChildContent>
    <div class="row justify-content-start align-items-center">
      <div class="col-md-6 d-flex align-items-center">
        <RadzenSidebarToggle @ref="sidebarToggle0" Click="@SidebarToggle0Click">
        </RadzenSidebarToggle>
        <RadzenLabel @ref="label0" Text="ErpCan">
        </RadzenLabel>
      </div>
      <div class="col-md-6 text-lg-right">
      </div>
    </div>
  </ChildContent>
</RadzenHeader>
<RadzenBody @ref="body0">
  <ChildContent>
    <RadzenContentContainer @ref="contentContainer0" style="height: 21px" Name="contentContainer0">
    @Body
    </RadzenContentContainer>
  </ChildContent>
</RadzenBody>
<RadzenSidebar @ref="sidebar0">
  <ChildContent>
    <RadzenPanelMenu @ref="panelmenu1">
      <ChildContent>
        <RadzenPanelMenuItem Text="Thu Mua">
          <ChildContent>
            <RadzenPanelMenuItem Path="tbl-po-purchase-orders" Text="PO">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="tbl-ic-classifications" Text="P. Loại Tồn Kho">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenuItem>
      </ChildContent>
    </RadzenPanelMenu>
    <RadzenPanelMenu @ref="panelmenu0">
      <ChildContent>
        <RadzenPanelMenuItem Text="Tồn kho">
          <ChildContent>
            <RadzenPanelMenuItem Path="tbl-ic-inventories" Text="Bảng Tồn Kho">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenuItem>
      </ChildContent>
    </RadzenPanelMenu>
    <RadzenPanelMenu @ref="panelmenu2">
      <ChildContent>
        <RadzenPanelMenuItem Text="Cài đặt">
          <ChildContent>
            <RadzenPanelMenuItem Path="tbl-ic-categories" Text="DM Tồn Kho">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="tbl-ic-classifications" Text="P. Loại Tồn Kho">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="tbl-ic-warehouses" Text="Kho bãi">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenuItem>
      </ChildContent>
    </RadzenPanelMenu>
  </ChildContent>
</RadzenSidebar>
<RadzenFooter @ref="footer0">
  <ChildContent>
    <RadzenLabel @ref="footerText" Text="ErpCan, Copyright &copy; 2019">
    </RadzenLabel>
  </ChildContent>
</RadzenFooter>
